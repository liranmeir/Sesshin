@model Sesshin.Model.Therapist

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Therapist</legend>

    <div class="display-label">LastName</div>
    <div class="display-field">@Model.LastName</div>

    <div class="display-label">FirstName</div>
    <div class="display-field">@Model.FirstName</div>

    <div class="display-label">FullName</div>
    <div class="display-field">@Model.FullName</div>

    <div class="display-label">HireDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.HireDate)</div>

    <div class="display-label">Phone</div>
    <div class="display-field">@Model.Phone</div>

    <div class="display-label">Email</div>
    <div class="display-field">@Model.Email</div>

    <div class="display-label">City</div>
    <div class="display-field">@(Model.City == null ? "None" : Model.City.Name)</div>

    <div class="display-label">Clinic</div>
    <div class="display-field">@Model.Clinic</div>

    <div class="display-label">ThreatmentTypes</div>
    <div class="display-field">@(Model.ThreatmentTypes == null ? "None" : Model.ThreatmentTypes.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


