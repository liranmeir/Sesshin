@{
    ViewBag.Title = "Edit";
}

@model Sesshin.Model.Article
<div class="bs-hilight">
    
    <h2>Edit</h2>
@*
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
*@
    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>Article</legend>

            @Html.HiddenFor(model => model.ID)
            @Html.Partial("_CreateOrEdit", Model)
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h4>
                        תמונות
                    </h4>
                </div>
                <div class="panel-body">
                    <p>
                        <a data-toggle="modal" 
                           data-target="#myModal" 
                           href="@string.Concat("/BackGroundImages/GetBackgroundImages?id=", Model.ID, "&type=article")" 
                           class="btn btn-info btn-lg">פתח תמונות</a>
                    </p>
                </div>
            </div>
            <div style="margin-top: 10px">
                <p>
                    <input type="submit" value="שמור" class="btn btn-success" />
                </p>
            </div>
        </fieldset>
    }
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
</div>
<!-- /.modal -->

<div class="alert alert-success">
    @Html.ActionLink("בחזרה לרשימה", "Index")
</div>
