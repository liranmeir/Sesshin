@model Sesshin.Model.Article

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Article</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">PageTitle</div>
    <div class="display-field">@Model.PageTitle</div>

    <div class="display-label">PageDescription</div>
    <div class="display-field">@Model.PageDescription</div>

    <div class="display-label">Headline</div>
    <div class="display-field">@Model.Headline</div>

    <div class="display-label">Content</div>
    <div class="display-field">@Model.Content</div>

    <div class="display-label">DateCreated</div>
    <div class="display-field">@String.Format("{0:g}", Model.DateCreated)</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>


