@{
    ViewBag.Title = "Contact";
}
@section script
{
    <script src="/Scripts/bootstrap.min.js" type="text/javascript"></script>
}
@section styles
{
    <link href="/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="/Content/bootstrap-theme.min.css" rel="stylesheet" type="text/css" />
}
@Html.Partial("_DefaultMainContentChange")
<div class="text-content">
    <!-- Contacts -->
    <div id="contacts" class="contacts">

        <div class="row">
            <!-- Alignment -->
            <div class="col-sm-offset-7 col-sm-4">


                <!-- Form itself -->
                <form name="contact" class="well" id="contactForm" novalidate action="/Home/Contact"
                      method="POST">
                    השאר פרטים
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="שם מלא" id="Name" name="Name"
                               required data-validation-required-message="הקלד שם מלא" />
                        <p class="help-block">
                        </p>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="טלפון" id="Phone" name="Phone"
                               required data-validation-required-message="הקלד טלפון" />
                        <p class="help-block">
                        </p>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" placeholder="מייל" id="email" name="Email"
                               required data-validation-required-message="הקלד אימייל" />
                    </div>
                    <div class="form-group">
                        <textarea rows="4" cols="100" class="form-control" placeholder="הערות" id="message"
                                  name="Remarks" required data-validation-required-message="Please enter your message"
                                  minlength="5" data-validation-minlength-message="Min 5 characters" maxlength="999"
                                  style="resize: none"></textarea>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <input type="checkbox" name="IsAcceptMail" id="IsAcceptMail" value="true" style="float: right" />
                            <label style="float: right; margin-right: 20px">
                                מעוניין לקבל מיילים מסשין
                            </label>
                        </div>
                    </div>
                    <!-- For success/fail messages -->
                    <button type="submit" class="btn btn-primary pull-right">
                        שלח
                    </button>
                    <br />
                </form>

                @if (ViewBag.IsError != null)
                {<div class="alert alert-danger" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span>
                    שגיאה במילוי הפרטים
                </div>
                }

            </div>
        </div>
    </div>
</div>
